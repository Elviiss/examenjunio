<div class="container p-4">
    <div class="row">
        {{#each pizzas}}
            <div class="col-md-3">
                <div class="card tex-center">
                    <div class="card-body">
                        <a target="_blank">
                            <img src="{{url}}">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                            <p class="m-2">{{ description }}</p>
                            <a href="/links/delete/{{id}}" class="btn btn-outline-danger">Borrar</a>
                            <a href="/links/edit/{{id}}" class="btn btn-outline-dark">Editar Pizza</a>
                        </a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No has guardado nada.</p>
                    <a href="/links/add">AÃ±ade alguna pizza</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>