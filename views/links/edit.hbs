<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
            <div class="card-body">
                <form action="/links/edit/{{pizza.id}}" method="POST" >
                    <div class="form-group">
                        <input value="{{pizza.title}}" name="title" placeholder="Nombre" type="text" class="form-control" autofocus>
                    </div>

                    <div class="form-group">
                        <input type="url" class="form-control" name="url" placeholder="URL" value="{{pizza.url}}"/>
                    </div>

                    <div class="form-group">
                        <textarea name="description" rows="2" class="form-control" placeholder="Description..."></textarea>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-outline-success">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>