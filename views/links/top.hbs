<div class="container p-4">
    <div class="row">
        {{#each pizza}}
            <div class="col-md-3">
                <div class="card tex-center">
                    <div class="card-body">
                        <a target="_blank">
                            <img src="{{url}}">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                            <p class="m-2">{{ description }}</p>
                            <p>Likes: {{likes}}</p>
                            <p>Dislikes: {{dislikes}}</p>
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>